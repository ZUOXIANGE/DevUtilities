<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DevUtilities.ViewModels"
             x:Class="DevUtilities.Views.TimestampConverterView"
             x:DataType="vm:TimestampConverterViewModel">

  <Design.DataContext>
    <vm:TimestampConverterViewModel/>
  </Design.DataContext>

  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <StackPanel Margin="24" Spacing="20">
      
      <!-- 标题 -->
      <SelectableTextBlock Text="时间戳转换工具" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
      
      <!-- 当前时间显示 -->
      <Border Background="White" CornerRadius="8" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel Spacing="12">
          <SelectableTextBlock Text="当前时间" FontSize="16" FontWeight="SemiBold"/>
          
          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
             <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4" Margin="0,0,6,0">
              <SelectableTextBlock Text="当前时间戳" FontSize="12" Foreground="#666666"/>
              <Border Background="#E8F5E8" CornerRadius="4" Padding="10">
                <SelectableTextBlock Text="{Binding CurrentTimestamp}" FontWeight="Bold" HorizontalAlignment="Center"/>
              </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4" Margin="6,0,0,0">
              <SelectableTextBlock Text="当前日期时间" FontSize="12" Foreground="#666666"/>
              <Border Background="#E8F5E8" CornerRadius="4" Padding="10">
                <SelectableTextBlock Text="{Binding CurrentDateTime}" FontWeight="Bold" HorizontalAlignment="Center"/>
              </Border>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>
      
      <!-- 时间戳转日期时间 -->
      <Border Background="White" CornerRadius="8" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel Spacing="12">
          <SelectableTextBlock Text="时间戳转日期时间" FontSize="16" FontWeight="SemiBold"/>
          
          <StackPanel Spacing="8">
            <SelectableTextBlock Text="输入时间戳" FontSize="12" Foreground="#666666"/>
            <Grid ColumnDefinitions="*,Auto">
               <TextBox Grid.Column="0" 
                        Text="{Binding TimestampInput}" 
                        Watermark="请输入时间戳（支持秒和毫秒）"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,8,0"/>
               <Button Grid.Column="1" 
                       Content="使用当前" 
                       Command="{Binding UseCurrentTimestampCommand}"
                       Background="#007ACC" 
                       Foreground="White" 
                       Padding="12,6"/>
             </Grid>
          </StackPanel>
          
          <StackPanel Spacing="8">
            <SelectableTextBlock Text="转换结果" FontSize="12" Foreground="#666666"/>
            <TextBox Text="{Binding DateTimeResult}" 
                     IsReadOnly="True" 
                     AcceptsReturn="True" 
                     MinHeight="80"
                     Background="#F8F9FA"
                     HorizontalAlignment="Stretch"/>
          </StackPanel>
        </StackPanel>
      </Border>
      
      <!-- 日期时间转时间戳 -->
      <Border Background="White" CornerRadius="8" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
        <StackPanel Spacing="12">
          <SelectableTextBlock Text="日期时间转时间戳" FontSize="16" FontWeight="SemiBold"/>
          
          <StackPanel Spacing="8">
            <SelectableTextBlock Text="输入日期时间" FontSize="12" Foreground="#666666"/>
            <Grid ColumnDefinitions="*,Auto">
               <TextBox Grid.Column="0" 
                        Text="{Binding DateTimeInput}" 
                        Watermark="请输入日期时间（如：2023-01-01 12:00:00）"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,8,0"/>
               <Button Grid.Column="1" 
                       Content="使用当前" 
                       Command="{Binding UseCurrentDateTimeCommand}"
                       Background="#007ACC" 
                       Foreground="White" 
                       Padding="12,6"/>
             </Grid>
          </StackPanel>
          
          <StackPanel Spacing="8">
            <SelectableTextBlock Text="转换结果" FontSize="12" Foreground="#666666"/>
            <TextBox Text="{Binding TimestampResult}" 
                     IsReadOnly="True" 
                     AcceptsReturn="True" 
                     MinHeight="60"
                     Background="#F8F9FA"
                     HorizontalAlignment="Stretch"/>
          </StackPanel>
        </StackPanel>
      </Border>
      
    </StackPanel>
  </ScrollViewer>
</UserControl>

