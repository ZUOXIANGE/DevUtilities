<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DevUtilities.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="DevUtilities.Views.SqlFormatterView"
             x:DataType="vm:SqlFormatterViewModel">
  
  <Design.DataContext>
    <vm:SqlFormatterViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    
    <!-- 标题区域 -->
    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,16">
      <StackPanel Spacing="8">
        <SelectableTextBlock Text="SQL格式化器" FontSize="24" FontWeight="Bold" />
        <SelectableTextBlock Text="格式化和美化SQL语句，支持多种数据库方言" FontSize="14" Foreground="#666666" />
      </StackPanel>
    </Border>
    
    <!-- 主内容区域 -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
      <Grid RowDefinitions="Auto,*" Margin="20">
        
        <!-- 格式化选项 -->
        <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
          <Grid ColumnDefinitions="*,*,*,Auto,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="12">
            
            <!-- 第一行选项 -->
            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8">
              <SelectableTextBlock Text="数据库方言:" FontWeight="Medium" />
              <ComboBox ItemsSource="{Binding AvailableDialects}" 
                       SelectedItem="{Binding SelectedDialect}" 
                       MinWidth="120"/>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8">
              <SelectableTextBlock Text="格式选项:" FontWeight="Medium" />
              <StackPanel Spacing="4">
                <CheckBox Content="关键字大写" IsChecked="{Binding UppercaseKeywords}" />
                <CheckBox Content="添加换行符" IsChecked="{Binding AddLineBreaks}" />
              </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="8">
              <SelectableTextBlock Text="其他选项:" FontWeight="Medium" />
              <StackPanel Spacing="4">
                <CheckBox Content="对齐列名" IsChecked="{Binding AlignColumns}" />
                <CheckBox Content="压缩输出" IsChecked="{Binding CompactOutput}" />
              </StackPanel>
            </StackPanel>
            
            <!-- 操作按钮 -->
            <Button Grid.Row="0" Grid.Column="3" Content="格式化" Command="{Binding FormatCommand}" 
                   Background="#007ACC" Foreground="White" Padding="12,6" Margin="16,0,8,0"/>
            <Button Grid.Row="0" Grid.Column="4" Content="美化" Command="{Binding BeautifySqlCommand}" 
                   Background="#28A745" Foreground="White" Padding="12,6" Margin="8,0"/>
            <Button Grid.Row="0" Grid.Column="5" Content="压缩" Command="{Binding MinifySqlCommand}" 
                   Background="#6C757D" Foreground="White" Padding="12,6" Margin="8,0,0,0"/>
            
            <!-- 第二行选项 -->
            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="8">
              <TextBlock Text="缩进设置:" FontWeight="Medium" />
              <StackPanel Orientation="Horizontal" Spacing="8">
                <SelectableTextBlock Text="大小:" VerticalAlignment="Center"/>
                <NumericUpDown Value="{Binding IndentSize}" Minimum="1" Maximum="8" Width="60"/>
                <CheckBox Content="使用Tab" IsChecked="{Binding UseTabsForIndent}" />
              </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="8">
              <SelectableTextBlock Text="快速操作:" FontWeight="Medium" />
              <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="验证" Command="{Binding ValidateCommand}" 
                       Background="#17A2B8" Foreground="White" Padding="8,4"/>
                <Button Content="交换" Command="{Binding SwapInputOutputCommand}" 
                       Background="#6C757D" Foreground="White" Padding="8,4"/>
                <Button Content="清除" Command="{Binding ClearAll}" 
                        Background="#DC3545" Foreground="White" Padding="8,4"/>
              </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="1" Grid.Column="2" Spacing="8">
              <SelectableTextBlock Text="示例:" FontWeight="Medium" />
              <Button Content="加载示例" Command="{Binding UseExampleCommand}" 
                     Background="#28A745" Foreground="White" Padding="8,4"/>
            </StackPanel>
          </Grid>
        </Border>
        
        <!-- 输入输出区域 -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*">
          
          <!-- 输入区域 -->
          <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,8,0">
            <StackPanel Spacing="12">
              <SelectableTextBlock Text="输入SQL" FontSize="16" FontWeight="SemiBold"/>
              <TextBox Text="{Binding InputText}" 
                      AcceptsReturn="True" 
                      Height="400" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Consolas,Monaco,monospace"
                      FontSize="12"
                      Watermark="请输入SQL语句..."/>
            </StackPanel>
          </Border>
          
          <!-- 输出区域 -->
          <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="8,0,0,0">
            <StackPanel Spacing="12">
              <Grid ColumnDefinitions="*,Auto">
                <SelectableTextBlock Grid.Column="0" Text="格式化结果" FontSize="16" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="复制" Command="{Binding CopyCommand}" 
                         Background="#28A745" Foreground="White" Padding="8,4"/>
              </Grid>
              <TextBox Text="{Binding OutputText}" 
                      AcceptsReturn="True" 
                      Height="400" 
                      IsReadOnly="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Consolas,Monaco,monospace"
                      FontSize="12"
                      Background="White"
                      Watermark="格式化结果将显示在这里"/>
            </StackPanel>
          </Border>
        </Grid>
        
        <!-- 状态信息 -->
        <Border Grid.Row="2" Background="#E8F4FD" BorderBrush="#BEE5EB" BorderThickness="1" 
               CornerRadius="4" Padding="12" Margin="0,16,0,0"
               IsVisible="{Binding ValidationMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
          <Grid ColumnDefinitions="Auto,*">
            <SelectableTextBlock Grid.Column="0" Text="ℹ️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" />
            <SelectableTextBlock Grid.Column="1" Text="{Binding ValidationMessage}" TextWrapping="Wrap" VerticalAlignment="Center" />
          </Grid>
        </Border>
        
      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>

