<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DevUtilities.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="DevUtilities.Views.TextDiffView"
             x:DataType="vm:TextDiffViewModel">
  
  <Design.DataContext>
    <vm:TextDiffViewModel/>
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    
    <!-- 标题区域 -->
    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,16">
      <StackPanel Spacing="8">
        <SelectableTextBlock Text="文本差异对比工具" FontSize="24" FontWeight="Bold" />
        <SelectableTextBlock Text="支持文件和文本的逐行、逐字符差异对比分析" FontSize="14" Foreground="#666666" />
      </StackPanel>
    </Border>
    
    <!-- 主内容区域 -->
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
      <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20">
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
          <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
            
            <!-- 对比选项 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
              <CheckBox Content="忽略空白字符" IsChecked="{Binding IgnoreWhitespace}"/>
              <CheckBox Content="忽略大小写" IsChecked="{Binding IgnoreCase}"/>
              <CheckBox Content="显示行号" IsChecked="{Binding ShowLineNumbers}"/>
              <CheckBox Content="字符级差异" IsChecked="{Binding EnableCharacterDiff}"/>
            </StackPanel>
            
            <!-- 操作按钮 -->
            <Button Grid.Column="1" Content="交换文本" Command="{Binding SwapTextsCommand}" 
                   Background="#6C757D" Foreground="White" Padding="12,6" Margin="8,0"/>
            <Button Grid.Column="2" Content="清空所有" Command="{Binding ClearAllCommand}" 
                   Background="#DC3545" Foreground="White" Padding="12,6" Margin="8,0"/>
            <Button Grid.Column="3" Content="对比文本" Command="{Binding CompareTextsCommand}" 
                   Background="#007ACC" Foreground="White" Padding="12,6" Margin="8,0"/>
            <Button Grid.Column="4" Content="导出结果" Command="{Binding ExportDiffCommand}" 
                   Background="#28A745" Foreground="White" Padding="12,6" Margin="8,0"/>
          </Grid>
        </Border>
        
        <!-- 输入区域 -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="0,0,0,16">
          
          <!-- 左侧文本 -->
          <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,8,0">
            <StackPanel Spacing="12">
              <Grid ColumnDefinitions="*,Auto">
                <SelectableTextBlock Grid.Column="0" Text="左侧文本" FontSize="16" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="加载文件" Command="{Binding LoadLeftFileCommand}" 
                       Background="#6C757D" Foreground="White" Padding="8,4"/>
              </Grid>
              <TextBox Text="{Binding LeftText}" 
                      AcceptsReturn="True" 
                      Height="200" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Consolas,Monaco,monospace"
                      Watermark="请输入或加载左侧文本"/>
            </StackPanel>
          </Border>
          
          <!-- 右侧文本 -->
          <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="8,0,0,0">
            <StackPanel Spacing="12">
              <Grid ColumnDefinitions="*,Auto">
                <SelectableTextBlock Grid.Column="0" Text="右侧文本" FontSize="16" FontWeight="SemiBold"/>
                <Button Grid.Column="1" Content="加载文件" Command="{Binding LoadRightFileCommand}" 
                       Background="#6C757D" Foreground="White" Padding="8,4"/>
              </Grid>
              <TextBox Text="{Binding RightText}" 
                      AcceptsReturn="True" 
                      Height="200" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      FontFamily="Consolas,Monaco,monospace"
                      Watermark="请输入或加载右侧文本"/>
            </StackPanel>
          </Border>
        </Grid>
        
        <!-- 对比结果区域 -->
        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="8" Padding="16">
          <StackPanel Spacing="12">
            <SelectableTextBlock Text="对比结果" FontSize="16" FontWeight="SemiBold"/>
            
            <!-- 对比摘要 -->
             <Border Background="White" CornerRadius="4" Padding="12">
               <SelectableTextBlock Text="{Binding DiffSummary}" 
                          FontWeight="Medium"/>
             </Border>
            
            <!-- 差异列表 -->
            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
              <ItemsControl ItemsSource="{Binding DiffResult}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Border Padding="8,4" 
                           BorderThickness="0,0,0,1">
                      <Grid ColumnDefinitions="Auto,*,*">
                        
                        <!-- 行号 -->
                        <SelectableTextBlock Grid.Column="0" 
                                  Text="{Binding LineNumber}" 
                                  FontFamily="Consolas,Monaco,monospace"
                                  FontSize="12" 
                                  Foreground="#666666" 
                                  Width="50" 
                                  TextAlignment="Right"
                                  Margin="0,0,8,0"
                                  IsVisible="{Binding $parent[UserControl].((vm:TextDiffViewModel)DataContext).ShowLineNumbers}"/>
                        
                        <!-- 左侧内容 -->
                        <SelectableTextBlock Grid.Column="1" 
                                  Text="{Binding LeftContent}" 
                                  FontFamily="Consolas,Monaco,monospace"
                                  FontSize="12" 
                                  TextWrapping="NoWrap"
                                  Margin="0,0,8,0"/>
                        
                        <!-- 右侧内容 -->
                        <SelectableTextBlock Grid.Column="2" 
                                  Text="{Binding RightContent}" 
                                  FontFamily="Consolas,Monaco,monospace"
                                  FontSize="12" 
                                  TextWrapping="NoWrap"/>
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </StackPanel>
        </Border>
        
      </Grid>
    </ScrollViewer>
  </Grid>
</UserControl>

