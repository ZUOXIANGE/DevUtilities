<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DevUtilities.ViewModels"
             xmlns:converters="using:DevUtilities.Converters"
             xmlns:controls="using:DevUtilities.Controls"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="DevUtilities.Views.TextDiffView"
             x:DataType="vm:TextDiffViewModel">

  <UserControl.Resources>
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:DiffTypeToBackgroundConverter x:Key="DiffTypeToBackgroundConverter"/>
    <converters:DiffTypeToLeftIndicatorConverter x:Key="DiffTypeToLeftIndicatorConverter"/>
    <converters:DiffTypeToRightIndicatorConverter x:Key="DiffTypeToRightIndicatorConverter"/>
    <converters:DiffTypeToForegroundConverter x:Key="DiffTypeToForegroundConverter"/>
    <converters:DiffTypeToContentForegroundConverter x:Key="DiffTypeToContentForegroundConverter"/>
    <converters:CharacterDiffToInlinesConverter x:Key="CharacterDiffToInlinesConverter"/>
  </UserControl.Resources>

  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- 工具栏 -->
    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E1E4E8" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 选项 -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
          <CheckBox IsChecked="{Binding IgnoreWhitespace}" Content="忽略空白字符" FontSize="14"/>
          <CheckBox IsChecked="{Binding IgnoreCase}" Content="忽略大小写" FontSize="14"/>
          <CheckBox IsChecked="{Binding ShowLineNumbers}" Content="显示行号" FontSize="14"/>
          <CheckBox IsChecked="{Binding EnableCharacterDiff}" Content="字符级别差异" FontSize="14"/>
        </StackPanel>

        <!-- 操作按钮 -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
          <Button Command="{Binding LoadLeftFileCommand}" Classes="secondary" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="📁" FontSize="14"/>
              <TextBlock Text="加载左侧文件" FontSize="12"/>
            </StackPanel>
          </Button>
          <Button Command="{Binding LoadRightFileCommand}" Classes="secondary" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="📁" FontSize="14"/>
              <TextBlock Text="加载右侧文件" FontSize="12"/>
            </StackPanel>
          </Button>
          <Button Command="{Binding SwapTextsCommand}" Classes="secondary" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="🔄" FontSize="14"/>
              <TextBlock Text="交换" FontSize="12"/>
            </StackPanel>
          </Button>
          <Button Command="{Binding ExportDiffCommand}" Classes="secondary" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="💾" FontSize="14"/>
              <TextBlock Text="导出" FontSize="12"/>
            </StackPanel>
          </Button>
          <Button Command="{Binding ClearAllCommand}" Classes="secondary" Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="🗑️" FontSize="14"/>
              <TextBlock Text="清空" FontSize="12"/>
            </StackPanel>
          </Button>
        </StackPanel>
      </Grid>
    </Border>

    <!-- 输入区域 -->
    <Grid Grid.Row="1" Margin="0,0,0,12">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="8"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- 左侧文本 -->
      <Border Grid.Column="0" BorderBrush="#E1E4E8" BorderThickness="1" CornerRadius="6">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
          </Grid.RowDefinitions>
          
          <Border Grid.Row="0" Background="#F6F8FA" BorderBrush="#E1E4E8" BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="左侧文本" FontWeight="SemiBold" FontSize="14" Foreground="#24292F"/>
          </Border>
          
          <TextBox Grid.Row="1" 
                   Text="{Binding LeftText}" 
                   AcceptsReturn="True" 
                   TextWrapping="Wrap"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   ScrollViewer.HorizontalScrollBarVisibility="Auto"
                   FontFamily="Consolas,Monaco,monospace"
                   FontSize="13"
                   Padding="12"
                   Background="White"
                   BorderThickness="0"
                   Watermark="在此输入或粘贴左侧文本..."/>
        </Grid>
      </Border>

      <!-- 右侧文本 -->
      <Border Grid.Column="2" BorderBrush="#E1E4E8" BorderThickness="1" CornerRadius="6">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
          </Grid.RowDefinitions>
          
          <Border Grid.Row="0" Background="#F6F8FA" BorderBrush="#E1E4E8" BorderThickness="0,0,0,1" Padding="12,8">
            <TextBlock Text="右侧文本" FontWeight="SemiBold" FontSize="14" Foreground="#24292F"/>
          </Border>
          
          <TextBox Grid.Row="1" 
                   Text="{Binding RightText}" 
                   AcceptsReturn="True" 
                   TextWrapping="Wrap"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   ScrollViewer.HorizontalScrollBarVisibility="Auto"
                   FontFamily="Consolas,Monaco,monospace"
                   FontSize="13"
                   Padding="12"
                   Background="White"
                   BorderThickness="0"
                   Watermark="在此输入或粘贴右侧文本..."/>
        </Grid>
      </Border>
    </Grid>

    <!-- 对比结果 -->
    <Border Grid.Row="2" BorderBrush="#E1E4E8" BorderThickness="1" CornerRadius="6">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#F6F8FA" BorderBrush="#E1E4E8" BorderThickness="0,0,0,1" Padding="12,8">
          <TextBlock Text="对比结果" FontWeight="SemiBold" FontSize="14" Foreground="#24292F"/>
        </Border>
        
        <ScrollViewer Grid.Row="1" Padding="0">
          <ItemsControl ItemsSource="{Binding DiffResult}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Grid Background="{Binding DiffType, Converter={StaticResource DiffTypeToBackgroundConverter}}"
                      Margin="0,1">
                  <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="60"/>
                     <ColumnDefinition Width="20"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="20"/>
                     <ColumnDefinition Width="*"/>
                   </Grid.ColumnDefinitions>
                  
                  <!-- 行号 -->
                  <TextBlock Grid.Column="0" 
                             Text="{Binding LineNumber}" 
                             FontFamily="Consolas" 
                             FontSize="12" 
                             Foreground="#6B7280"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             IsVisible="{Binding $parent[UserControl].((vm:TextDiffViewModel)DataContext).ShowLineNumbers}"/>
                  
                  <!-- 左侧差异指示器 -->
                  <TextBlock Grid.Column="1" 
                             Text="{Binding DiffType, Converter={StaticResource DiffTypeToLeftIndicatorConverter}}" 
                             FontFamily="Consolas" 
                             FontSize="14" 
                             FontWeight="Bold"
                             Foreground="{Binding DiffType, Converter={StaticResource DiffTypeToForegroundConverter}}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                  
                  <!-- 左侧内容 -->
                  <controls:CharacterDiffTextBlock Grid.Column="2" 
                                                   CharacterDiffs="{Binding LeftCharacterDiffs}"
                                                   FontFamily="Consolas" 
                                                   FontSize="12" 
                                                   TextWrapping="NoWrap"
                                                   VerticalAlignment="Center"
                                                   Margin="8,4"
                                                   IsVisible="{Binding $parent[UserControl].((vm:TextDiffViewModel)DataContext).EnableCharacterDiff}"/>
                  
                  <TextBlock Grid.Column="2" 
                             Text="{Binding LeftContent}" 
                             FontFamily="Consolas" 
                             FontSize="12" 
                             Foreground="{Binding DiffType, Converter={StaticResource DiffTypeToContentForegroundConverter}}"
                             TextWrapping="NoWrap"
                             VerticalAlignment="Center"
                             Margin="8,4"
                             IsVisible="{Binding !$parent[UserControl].((vm:TextDiffViewModel)DataContext).EnableCharacterDiff}"/>
                  
                  <!-- 右侧差异指示器 -->
                  <TextBlock Grid.Column="3" 
                             Text="{Binding DiffType, Converter={StaticResource DiffTypeToRightIndicatorConverter}}" 
                             FontFamily="Consolas" 
                             FontSize="14" 
                             FontWeight="Bold"
                             Foreground="{Binding DiffType, Converter={StaticResource DiffTypeToForegroundConverter}}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                  
                  <!-- 右侧内容 -->
                  <controls:CharacterDiffTextBlock Grid.Column="4" 
                                                   CharacterDiffs="{Binding RightCharacterDiffs}"
                                                   FontFamily="Consolas" 
                                                   FontSize="12" 
                                                   TextWrapping="NoWrap"
                                                   VerticalAlignment="Center"
                                                   Margin="8,4"
                                                   IsVisible="{Binding $parent[UserControl].((vm:TextDiffViewModel)DataContext).EnableCharacterDiff}"/>
                  
                  <TextBlock Grid.Column="4" 
                             Text="{Binding RightContent}" 
                             FontFamily="Consolas" 
                             FontSize="12" 
                             Foreground="{Binding DiffType, Converter={StaticResource DiffTypeToContentForegroundConverter}}"
                             TextWrapping="NoWrap"
                             VerticalAlignment="Center"
                             Margin="8,4"
                             IsVisible="{Binding !$parent[UserControl].((vm:TextDiffViewModel)DataContext).EnableCharacterDiff}"/>
                </Grid>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </Grid>
    </Border>

    <!-- 状态栏 -->
    <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E1E4E8" BorderThickness="1" CornerRadius="6" Padding="12,8" Margin="0,12,0,0">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="{Binding DiffSummary}" 
                   FontSize="14" 
                   Foreground="#24292F" 
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
          <Border Background="#28A745" CornerRadius="12" Padding="8,4" IsVisible="{Binding !HasDifferences}">
            <TextBlock Text="✓ 文本相同" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
          </Border>
          <Border Background="#DC3545" CornerRadius="12" Padding="8,4" IsVisible="{Binding HasDifferences}">
            <TextBlock Text="⚠ 存在差异" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
          </Border>
        </StackPanel>
      </Grid>
    </Border>
  </Grid>

</UserControl>