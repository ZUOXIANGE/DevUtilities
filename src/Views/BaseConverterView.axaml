<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DevUtilities.ViewModels"
             x:Class="DevUtilities.Views.BaseConverterView"
             x:DataType="vm:BaseConverterViewModel">

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20">
      <!-- 标题 -->
      <TextBlock Text="进制转换器" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 HorizontalAlignment="Center"/>

      <!-- 错误信息 -->
      <Border Background="#FFEBEE" 
              CornerRadius="5" 
              Padding="10"
              IsVisible="{Binding HasError}">
        <TextBlock Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   TextWrapping="Wrap"/>
      </Border>

      <!-- 转换区域 -->
      <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="120,*,Auto" Margin="0,10">
        
        <!-- 二进制 -->
        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="二进制 (BIN):" 
                   VerticalAlignment="Center" 
                   FontWeight="SemiBold"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding BinaryValue}" 
                 Watermark="输入二进制数 (例如: 1010)"
                 FontFamily="Consolas"
                 Margin="10,0"/>
        <Button Grid.Row="0" Grid.Column="2" 
                Content="复制" 
                Command="{Binding CopyBinaryCommand}"
                Margin="5,0"/>

        <!-- 八进制 -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="八进制 (OCT):" 
                   VerticalAlignment="Center" 
                   FontWeight="SemiBold"
                   Margin="0,10,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding OctalValue}" 
                 Watermark="输入八进制数 (例如: 12)"
                 FontFamily="Consolas"
                 Margin="10,10,10,0"/>
        <Button Grid.Row="1" Grid.Column="2" 
                Content="复制" 
                Command="{Binding CopyOctalCommand}"
                Margin="5,10,5,0"/>

        <!-- 十进制 -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="十进制 (DEC):" 
                   VerticalAlignment="Center" 
                   FontWeight="SemiBold"
                   Margin="0,10,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding DecimalValue}" 
                 Watermark="输入十进制数 (例如: 10)"
                 FontFamily="Consolas"
                 Margin="10,10,10,0"/>
        <Button Grid.Row="2" Grid.Column="2" 
                Content="复制" 
                Command="{Binding CopyDecimalCommand}"
                Margin="5,10,5,0"/>

        <!-- 十六进制 -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="十六进制 (HEX):" 
                   VerticalAlignment="Center" 
                   FontWeight="SemiBold"
                   Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding HexValue}" 
                 Watermark="输入十六进制数 (例如: A 或 0xA)"
                 FontFamily="Consolas"
                 Margin="10,10,10,0"/>
        <Button Grid.Row="3" Grid.Column="2" 
                Content="复制" 
                Command="{Binding CopyHexCommand}"
                Margin="5,10,5,0"/>

        <!-- 清除按钮 -->
        <Button Grid.Row="4" Grid.Column="1" 
                Content="清除所有" 
                Command="{Binding ClearCommand}"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Padding="20,8"/>
      </Grid>

      <!-- 使用说明 -->
      <Expander Header="使用说明" IsExpanded="False">
        <StackPanel Spacing="10" Margin="10">
          <TextBlock Text="• 在任意一个输入框中输入数值，其他进制会自动转换" TextWrapping="Wrap"/>
          <TextBlock Text="• 二进制：只能包含0和1" TextWrapping="Wrap"/>
          <TextBlock Text="• 八进制：只能包含0-7的数字" TextWrapping="Wrap"/>
          <TextBlock Text="• 十进制：标准的十进制数字" TextWrapping="Wrap"/>
          <TextBlock Text="• 十六进制：包含0-9和A-F，可以带0x前缀" TextWrapping="Wrap"/>
          <TextBlock Text="• 点击复制按钮可以将对应进制的值复制到剪贴板" TextWrapping="Wrap"/>
        </StackPanel>
      </Expander>

      <!-- 常用转换参考 -->
      <Expander Header="常用转换参考" IsExpanded="False">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
              ColumnDefinitions="*,*,*,*" 
              Margin="10">
          
          <!-- 表头 -->
          <TextBlock Grid.Row="0" Grid.Column="0" Text="十进制" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock Grid.Row="0" Grid.Column="1" Text="二进制" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock Grid.Row="0" Grid.Column="2" Text="八进制" FontWeight="Bold" HorizontalAlignment="Center"/>
          <TextBlock Grid.Row="0" Grid.Column="3" Text="十六进制" FontWeight="Bold" HorizontalAlignment="Center"/>

          <!-- 分隔线 -->
          <Rectangle Grid.Row="1" Grid.ColumnSpan="4" Height="1" Fill="Gray" Margin="0,5"/>

          <!-- 数据行 -->
          <TextBlock Grid.Row="2" Grid.Column="0" Text="0" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="2" Grid.Column="1" Text="0" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="2" Grid.Column="2" Text="0" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="2" Grid.Column="3" Text="0" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="3" Grid.Column="0" Text="8" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="3" Grid.Column="1" Text="1000" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="3" Grid.Column="2" Text="10" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="3" Grid.Column="3" Text="8" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="4" Grid.Column="0" Text="15" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="4" Grid.Column="1" Text="1111" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="4" Grid.Column="2" Text="17" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="4" Grid.Column="3" Text="F" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="5" Grid.Column="0" Text="16" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="5" Grid.Column="1" Text="10000" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="5" Grid.Column="2" Text="20" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="5" Grid.Column="3" Text="10" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="6" Grid.Column="0" Text="255" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="6" Grid.Column="1" Text="11111111" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="6" Grid.Column="2" Text="377" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="6" Grid.Column="3" Text="FF" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="7" Grid.Column="0" Text="1024" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="7" Grid.Column="1" Text="10000000000" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="7" Grid.Column="2" Text="2000" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="7" Grid.Column="3" Text="400" HorizontalAlignment="Center" FontFamily="Consolas"/>

          <TextBlock Grid.Row="8" Grid.Column="0" Text="65535" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="8" Grid.Column="1" Text="1111111111111111" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="8" Grid.Column="2" Text="177777" HorizontalAlignment="Center" FontFamily="Consolas"/>
          <TextBlock Grid.Row="8" Grid.Column="3" Text="FFFF" HorizontalAlignment="Center" FontFamily="Consolas"/>
        </Grid>
      </Expander>
    </StackPanel>
  </ScrollViewer>
</UserControl>