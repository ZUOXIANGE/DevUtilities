<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DevUtilities.ViewModels"
             xmlns:views="using:DevUtilities.Views"
             xmlns:converters="using:DevUtilities.Converters"
             x:Class="DevUtilities.App"
             RequestedThemeVariant="Default">

  <Application.DataTemplates>
    <!-- Tool View Templates -->
    <DataTemplate DataType="{x:Type vm:TimestampConverterViewModel}">
      <views:TimestampConverterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:JsonFormatterViewModel}">
      <views:JsonFormatterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:Base64EncoderViewModel}">
      <views:Base64EncoderView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PasswordGeneratorViewModel}">
      <views:PasswordGeneratorView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UrlToolsViewModel}">
      <views:UrlToolsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HexConverterViewModel}">
      <views:HexConverterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:JwtEncoderViewModel}">
      <views:JwtEncoderView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SqlFormatterViewModel}">
      <views:SqlFormatterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HtmlFormatterViewModel}">
      <views:HtmlFormatterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:XmlFormatterViewModel}">
      <views:XmlFormatterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StringEscapeViewModel}">
      <views:StringEscapeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CryptoToolsViewModel}">
      <views:CryptoToolsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:QrCodeViewModel}">
      <views:QrCodeView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CronExpressionViewModel}">
      <views:CronExpressionView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:IpQueryViewModel}">
      <views:IpQueryView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HttpRequestViewModel}">
      <views:HttpRequestView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ParquetViewerViewModel}">
      <views:ParquetViewerView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UnitConverterViewModel}">
      <views:UnitConverterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BaseConverterViewModel}">
      <views:BaseConverterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RegexTesterViewModel}">
      <views:RegexTesterView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UuidGeneratorViewModel}">
      <views:UuidGeneratorView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ColorPickerViewModel}">
      <views:ColorPickerView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TextDiffViewModel}">
      <views:TextDiffView/>
    </DataTemplate>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme />
    
    <!-- Custom Styles -->
    <Style Selector="Window">
      <Setter Property="Background" Value="#F5F5F5"/>
    </Style>
    
    <Style Selector="Button.tool-button">
      <Setter Property="Background" Value="White"/>
      <Setter Property="BorderBrush" Value="#E0E0E0"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="16,16"/>
      <Setter Property="Margin" Value="8"/>
      <Setter Property="Height" Value="140"/>
      <Setter Property="Width" Value="160"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Button.tool-button:pointerover">
      <Setter Property="Background" Value="#F0F8FF"/>
      <Setter Property="BorderBrush" Value="#4A90E2"/>
    </Style>
    
    <Style Selector="Button.tool-button:pressed">
      <Setter Property="Background" Value="#E6F3FF"/>
    </Style>
    
    <Style Selector="TextBlock.tool-title">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="#333333"/>
      <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBlock.tool-description">
      <Setter Property="FontSize" Value="11"/>
      <Setter Property="Foreground" Value="#666666"/>
      <Setter Property="TextAlignment" Value="Center"/>
      <Setter Property="TextWrapping" Value="Wrap"/>
      <Setter Property="Margin" Value="0,4,0,0"/>
      <Setter Property="MaxWidth" Value="130"/>
      <Setter Property="Height" Value="32"/>
    </Style>
    
    <Style Selector="Panel.tool-content">
      <Setter Property="Background" Value="White"/>
      <Setter Property="Margin" Value="16"/>
    </Style>
    
    <Style Selector="TextBox.input-field">
      <Setter Property="Padding" Value="12"/>
      <Setter Property="BorderBrush" Value="#E0E0E0"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Background" Value="White"/>
    </Style>
    
    <Style Selector="Button.primary-button">
      <Setter Property="Background" Value="#4A90E2"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Padding" Value="16,8"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.primary-button:pointerover">
      <Setter Property="Background" Value="#357ABD"/>
    </Style>
    
    <Style Selector="Button.secondary-button">
      <Setter Property="Background" Value="White"/>
      <Setter Property="Foreground" Value="#4A90E2"/>
      <Setter Property="BorderBrush" Value="#4A90E2"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Padding" Value="16,8"/>
    </Style>
    
    <Style Selector="Button.secondary-button:pointerover">
      <Setter Property="Background" Value="#F0F8FF"/>
    </Style>
    
    <!-- Card Container Styles -->
    <Style Selector="Border.card">
      <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Padding" Value="24"/>
      <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>
    
    <Style Selector="Border.card-small">
      <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="16"/>
    </Style>
    
    <!-- Input/Output Area Styles -->
    <Style Selector="Border.input-area">
      <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
      <Setter Property="CornerRadius" Value="12"/>
      <Setter Property="Padding" Value="20"/>
      <Setter Property="MinHeight" Value="400"/>
      <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>
    
    <!-- Code Display Styles -->
    <Style Selector="SelectableTextBlock.code">
      <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,monospace"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="TextWrapping" Value="NoWrap"/>
      <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <Style Selector="TextBox.code">
      <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,monospace"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="TextWrapping" Value="NoWrap"/>
      <Setter Property="LineHeight" Value="20"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Title Styles -->
    <Style Selector="TextBlock.page-title">
      <Setter Property="FontSize" Value="28"/>
      <Setter Property="FontWeight" Value="Bold"/>
      <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
    </Style>
    
    <Style Selector="TextBlock.section-title">
      <Setter Property="FontSize" Value="18"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="TextBlock.subsection-title">
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <!-- Description Styles -->
    <Style Selector="TextBlock.description">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
    </Style>
    
    <!-- Status Indicator Styles -->
    <Style Selector="ProgressBar.loading">
      <Setter Property="Height" Value="4"/>
      <Setter Property="IsIndeterminate" Value="True"/>
    </Style>
    
    <Style Selector="Border.error">
      <Setter Property="Background" Value="#FFEBEE"/>
      <Setter Property="BorderBrush" Value="#F44336"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Padding" Value="12"/>
    </Style>
    
    <Style Selector="Border.success">
      <Setter Property="Background" Value="#E8F5E8"/>
      <Setter Property="BorderBrush" Value="#4CAF50"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Padding" Value="12"/>
    </Style>
    
    <Style Selector="Border.info">
      <Setter Property="Background" Value="#E3F2FD"/>
      <Setter Property="BorderBrush" Value="#2196F3"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Padding" Value="12"/>
    </Style>
    
    <!-- Control Panel Styles -->
    <Style Selector="StackPanel.control-group">
      <Setter Property="Spacing" Value="8"/>
    </Style>
    
    <Style Selector="Grid.control-grid">
      <Setter Property="RowSpacing" Value="16"/>
      <Setter Property="ColumnSpacing" Value="20"/>
    </Style>
    
    <!-- Button Group Styles -->
    <Style Selector="StackPanel.button-group">
      <Setter Property="Orientation" Value="Horizontal"/>
      <Setter Property="Spacing" Value="12"/>
    </Style>
    
    <!-- File Drop Area Styles -->
    <Style Selector="Border.drop-area">
      <Setter Property="Background" Value="#F8F9FA"/>
      <Setter Property="BorderBrush" Value="#DEE2E6"/>
      <Setter Property="BorderThickness" Value="2"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="24"/>
      <Setter Property="MinHeight" Value="120"/>
    </Style>
    
    <Style Selector="Border.drop-area:pointerover">
      <Setter Property="Background" Value="#E3F2FD"/>
      <Setter Property="BorderBrush" Value="#2196F3"/>
    </Style>
  </Application.Styles>

</Application>